<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playing_bg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/room" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="127dp"
            android:layout_height="67dp"
            android:background="@drawable/numberset"
            android:padding="18dp"
            android:text='遊戲房間'
            android:textSize="18sp"
            android:textStyle="bold" /> />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nowPlayer"
            android:layout_width="102dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/room2" />

        <EditText
            android:id="@+id/PlayerMsg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dia"
            android:padding="18dp"
            android:text='輸入你要加入的房間名稱'
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button2"
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:background="@drawable/button1"
            android:text='指定房間加入'
            android:textSize="18sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:background="@drawable/button1"
            android:text='隨機房間加入'
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>