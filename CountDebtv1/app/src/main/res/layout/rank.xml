<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playing_bg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/nowPlayer"
            android:layout_width="141dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/rank" />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PlayerMsg"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@drawable/bg_dia"
                android:gravity="center"
                android:padding="18dp"
                android:text="排行榜"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:background="@drawable/rank5"
                android:padding="9dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:background="@drawable/numberset"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="91dp"
                android:layout_height="67dp"
                android:layout_weight="0.28"
                app:srcCompat="@drawable/rank1" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="玩家姓名1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textDirection="anyRtl"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="分數"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:background="@drawable/numberset"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="91dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/rank2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="玩家姓名2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textDirection="anyRtl"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="分數"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:background="@drawable/numberset"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="91dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/rank3" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="玩家姓名3"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textDirection="anyRtl"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:gravity="left"
                android:text="分數"
                android:textColor="@android:color/black"
                android:textSize="28sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:background="@drawable/numberset"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="91dp"
                android:layout_height="65dp"
                app:srcCompat="@drawable/rank4" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="玩家姓名4"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textDirection="anyRtl"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/textView12"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="分數"
                android:textColor="@android:color/black"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:text="Back"
            android:textSize="18sp" />

    </LinearLayout>




</LinearLayout>