<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playing_bg"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nowPlayer"
            android:layout_width="141dp"
            android:layout_height="147dp"
            app:srcCompat="@drawable/rank" />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PlayerMsg"
                android:layout_width="202dp"
                android:layout_height="75dp"
                android:background="@drawable/bg_dia"
                android:padding="18dp"
                android:text="排行榜"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:background="@drawable/rank5"
                android:padding="9dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="82dp"
            app:srcCompat="@drawable/rank1" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="玩家姓名1"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textDirection="anyRtl"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="分數"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="105dp"
            android:layout_height="82dp"
            app:srcCompat="@drawable/rank2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="玩家姓名2"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textDirection="anyRtl"
            android:textSize="32sp" />/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="分數"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="105dp"
            android:layout_height="82dp"
            app:srcCompat="@drawable/rank3" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="148dp"
            android:layout_height="70dp"
            android:text="玩家姓名3"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textDirection="anyRtl"
            android:textSize="32sp" />
        />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="分數"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="32sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="109dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/rank4" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩家姓名4"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textDirection="anyRtl"
            android:textSize="32sp" />
        />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="分數"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:text="Back"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>