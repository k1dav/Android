<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playing_bg"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nowPlayer"
            android:layout_width="wrap_content"
            android:layout_height="147dp"
            app:srcCompat="@drawable/player2icon" />

        <TextView
            android:id="@+id/PlayerMsg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_dia"
            android:padding="18dp"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/nowNum"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_margin="15dp"
        android:layout_weight="0.29"
        android:autoText="false"
        android:background="@drawable/host"
        android:gravity="fill_vertical|center"
        android:paddingLeft="130dp"
        android:paddingTop="70dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="100sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ReturnBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:text="迴轉"
            android:textSize="18sp" />

        <Button
            android:id="@+id/PassBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:text="PASS"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addNumBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:text="加一（最多三次）"
            android:textSize="18sp" />

    </LinearLayout>


    <Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button1"
        android:text="下一位"
        android:visibility="invisible" />

</LinearLayout>