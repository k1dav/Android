<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.k1dave6412.countdebtv1.GameActivity"
    android:background="@drawable/bg"
    android:weightSum="1"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:layout_weight="0.76"
        android:background="@drawable/numberset"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingTop="50dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playerIcon"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:layout_weight="1.23"
                app:srcCompat="@drawable/playericon" />

            <TextView
                android:id="@+id/choseMsg"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.84"
                android:padding="10dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/numberSetText"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="1 - 100"
            android:inputType="number"
            android:padding="10dp" />

        <Button
            android:id="@+id/numberSetButton"
            android:layout_width="77dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.03"
            android:background="@drawable/button1"
            android:text="OK" />

    </LinearLayout>
</LinearLayout>
